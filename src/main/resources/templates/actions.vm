#parse('templates/header.vm')

#if($successMessage && $successMessage != '')
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
            $successMessage
        </div>
    </div>
</div>
#end
#if($errorMessage && $errorMessage != '')
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
            $errorMessage
        </div>
    </div>
</div>
#end
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h3>Create new custom action</h3>
        <form action="create_custom_action" method="post">
            <div class="form-group">
                <label for="input_description">Description</label>
                <input type="text" name="description" class="form-control" id="input_description"
                       placeholder="E.g. Open garage">
            </div>
            <div class="row">
                <div class="col-md-10">
                    <label style="font-size:larger;">Commands</label>
                </div>
            </div>
            <div id="row-action" class="row">
                <div class="form-group col-xs-5">
                    <label for="select_component">Component</label>
                    <select id="select_component" name="components[]" class="form-control">
                        #foreach ($component in $components)
                        <option value="$component.subnet:$component.deviceId">$component.remark
                            ($component.subnet/$component.deviceId - $component.description)
                        </option>
                        #end
                    </select>
                </div>
                <div class="form-group col-xs-2">
                    <label for="select_operation">Operation</label>
                    <select id="select_operation" name="operations[]" class="form-control">
                        <option value="57372">UV switch control</option>
                        <option value="58328">Panel control</option>
                    </select>
                </div>
                <div class="form-group col-xs-2">
                    <label for="select_parameter_1">Function (parameter 1)</label>
                    <select id="select_parameter_1" name="parameters1[]" class="form-control">
                        <option value="17">Control button status (17)</option>
                        <option value="18">Control button (18)</option>
                    </select>
                </div>
                <div class="form-group col-xs-1">
                    <label for="input_parameter_2">Parameter 2</label>
                    <input id="input_parameter_2" name="parameters2[]" type="text" class="form-control"
                           placeholder="0-255">
                </div>
                <div class="form-group col-xs-1">
                    <label for="input_parameter_3">Parameter 3</label>
                    <input id="input_parameter_3" name="parameters3[]" type="text" class="form-control"
                           placeholder="0-255">
                </div>
            </div>
            <div id="row-add_command" class="row">
                <div class="form-group col-xs-6">
                    <button type="button" class="btn btn-default"
                            onclick="$('#row-action').clone().insertBefore('#row-add_command');">Add command
                    </button>
                </div>
            </div>
            <div class="form-group col-xs-18">
                <button type="submit" class="btn btn-primary">Create action</button>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h3>Create dimmer action</h3>
        <form action="create_dimmer_action" method="post">
            <div class="form-group">
                <label for="input_area_name">Area name (to be used in action)</label>
                <input type="text" name="description" class="form-control" id="input_area_name"
                       placeholder="E.g. the kitchen">
            </div>
            <div class="row">
                <div class="col-md-10">
                    <label style="font-size:larger;">Commands</label>
                </div>
            </div>
            <div id="row-dimmer_channel" class="row">
                <div class="form-group col-xs-5">
                    <label for="select_dimmer_channel">Dimmer channel</label>
                    <select id="select_dimmer_channel" name="channels[]" class="form-control">
                        #foreach ($component in $components)
                        #if($component.class.name == "com.roysolberg.java.hdlserver.hdl.component.DimmerComponent")
                        #foreach ($index in [1..$component.numOfChannels])
                        <option value="$component.subnet:$component.deviceId:$index">$component.remark
                            ($component.subnet/$component.deviceId) - channel $index
                        </option>
                        #end
                        #end
                        #end
                    </select>
                </div>
            </div>
            <div id="row-add_dimmer_channel" class="row">
                <div class="form-group col-xs-6">
                    <button type="button" class="btn btn-default"
                            onclick="$('#row-dimmer_channel').clone().insertBefore('#row-add_dimmer_channel');">Add
                        dimmer channel
                    </button>
                </div>
            </div>
            <div class="form-group col-xs-18">
                <button type="submit" class="btn btn-primary">Create action</button>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h3>Existing actions</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="table-responsive">
            <table class="table table-hover">
                <tbody>
                #foreach ($action in $actions)
                <div class="modal fade" id="deleteActionModal" tabindex="-1" role="dialog"
                     aria-labelledby="modalLabel-$action.id">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="modalLabel-$action.id">Delete action?</h4>
                            </div>
                            <div class="modal-body">Are you sure you want to delete this action?</div>
                            <div class="modal-footer">
                                <form action="delete_action" method="post">
                                    <input type="hidden" name="actionId" value="$action.id"/>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <tr class="active">
                    <th style="font-size:larger;" class="text-left" colspan="4">#if($action.description !=
                        '')$action.description#{else}Action $action.id#{end}:
                    </th>
                    <th style="text-align:right;">
                        <button type="button" class="btn btn-default btn-sm default" data-toggle="modal" title="Delete action"
                                data-target="#deleteActionModal">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </th>
                </tr>
                <tr>
                    <th>Component</th>
                    <th>Operation</th>
                    <th>Function (parameter 1)</th>
                    <th>Parameter 2</th>
                    <th>Parameter 3</th>
                </tr>
                #foreach ($command in $action.commands)
                <tr>
                    <td>$command.subnetId/$command.deviceId</td>
                    <td>$command.operation</td>
                    <td>$command.parameter1</td>
                    <td>$!command.parameter2</td>
                    <td>$!command.parameter3</td>
                </tr>
                #end
                <tr>
                    <th>URL:</th>
                    <td colspan="4">$action.getUrl($host)</td>
                </tr>
                <tr>
                    <th>cURL:</th>
                    <td style="font-family:monospace;font-size:smaller;" colspan="4">
                        $action.getCurlCommand($host,$config.authToken)
                    </td>
                </tr>
                #end
                </tbody>
            </table>
        </div>
    </div>
</div>

#parse('templates/footer.vm')
